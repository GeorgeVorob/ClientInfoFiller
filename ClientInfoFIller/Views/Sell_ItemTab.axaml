<UserControl
            xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:vm="using:ClientInfoFiller.ViewModels"
            xmlns:local="using:ClientInfoFiller"
            xmlns:views="using:ClientInfoFiller.Views"
            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
            x:Class="ClientInfoFiller.Views.Sell_ItemTab">
  <Design.DataContext>
    <vm:Sell_ItemTabViewModel/>
  </Design.DataContext>  
  
  <!--Продажа товара-->
  <StackPanel Orientation="Vertical" Grid.Column="2" Margin="10 0 10 0">
    <StackPanel Orientation="Horizontal">
      <Button IsTabStop="False" Content="Указать таблицу для продажи" Click="ExcelSelledFileSelectCliek"></Button>
      <Border BorderBrush="Gray" BorderThickness="2" VerticalAlignment="Center" Margin="3">
        <TextBlock VerticalAlignment="Center" Text="{Binding ExcelSelledFilepath, Mode=OneWay}"></TextBlock>
      </Border>
    </StackPanel>
    <Button VerticalAlignment="Top" Margin="0 20 0 0" Background="GreenYellow" Content="Продать" Click="SellClick" IsEnabled="{Binding CanAccessExcellSelledFile, Mode=OneWay}" IsVisible="{Binding  IsNewRow, Mode=OneWay}"/>
  </StackPanel>
</UserControl>
